{
  "expo": {
    "name": "SurviveAI",
    "slug": "SurviveAI",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "surviveai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4a9960"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SurviveAI needs your location to display GPS coordinates for emergency situations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SurviveAI needs your location to display GPS coordinates for emergency situations."
      },
      "bundleIdentifier": "com.anonymous.SurviveAI"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4a9960"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "FLASHLIGHT",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SurviveAI needs your location to display GPS coordinates for emergency situations."
        }
      ],
      "expo-sensors"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
